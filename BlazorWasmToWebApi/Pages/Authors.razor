@page "/authors"
@inject HttpClient Http
@using  BlazorShared.Models
<h1>Book Authors</h1>

<p>Authors list</p>

@if (authors == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var author in authors)
            {
                <tr>
                    <td>@author.FirstName</td>
                    <td>@author.LastName</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    //private CustomersPage[] customers;
    List<AuthorDto> authors;

    protected override async Task OnInitializedAsync()
    {
        string sUrl = "https://localhost:44310/api/authors";
        //customers = await Http.GetJsonAsync<CustomersPage[]>(sUrl);
        authors = await Http.GetJsonAsync<List<AuthorDto>>(sUrl);
    }

}
